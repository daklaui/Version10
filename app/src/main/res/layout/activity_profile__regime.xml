<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_Regime">
    <ScrollView
        style="@style/parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent">

        <RelativeLayout style="@style/parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:weightSum="12">

                <LinearLayout
                    style="@style/parent"
                    android:layout_weight="3"
                    android:background="@drawable/login_shape_bk"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_login_bk"
                        android:contentDescription="login background" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    style="@style/loginCard"
                    app:cardCornerRadius="@dimen/loginCardRadius"
                    android:elevation="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:layout_marginBottom="@dimen/loginViewsMargin"
                    android:background="@color/whiteCardColor"
                    >


                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:padding="@dimen/loginViewsMargin">

                        <TextView
                            style="@style/headerTextPrimary"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:text="Regime" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/signup_text_margin_top"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/parent"
                            android:layout_marginTop="@dimen/signup_text_margin_top"/>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/signup_text_margin_top"/>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/parent"
                            android:layout_marginTop="@dimen/signup_text_margin_top">
<EditText
    android:id="@+id/NvPoids"
    style="@style/modifiedEditText"

    android:hint="Objectif de poids"
    android:inputType="numberDecimal"
    android:maxLines="1"/>


                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/parent"
                            android:layout_marginTop="@dimen/signup_text_margin_top">


                            <TextView
                                style="@style/modifiedEditText"
                                android:layout_width="match_parent"
                                android:hint="Qelle est votre objectif hebdomadaire ?"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/signup_text_margin_top" >
<CheckBox
    android:id="@+id/Case1"
    android:layout_width="268dp"
    android:layout_height="wrap_content"
    android:text="Perder 0,25 kg par semaine"/>
                            <CheckBox
                                android:id="@+id/Case2"
                                android:layout_width="336dp"
                                android:layout_height="wrap_content"
                                android:text="Perder 0,5 kg par semaine" />


                            <CheckBox
                                android:id="@+id/Case3"
                                android:layout_width="336dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Perder 0,75 kg par semaine" />

                            <CheckBox
                                android:id="@+id/Case4"
                                android:layout_width="336dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Perder 1kg par semaine" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/signup_text_margin_top" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/signup_text_margin_top"/>

<Button
    android:id="@+id/Confirmer"
    style="@style/loginButton"
    android:layout_height="36dp"
    android:layout_gravity="center"
    android:text="Confirmer"  />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>